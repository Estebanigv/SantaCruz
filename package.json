{
  "name": "vina-santa-cruz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "test:watch": "vitest",
    "db:migrate": "chmod +x ./scripts/db/migrate.sh && ./scripts/db/migrate.sh",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:backup": "chmod +x ./scripts/db/backup.sh && ./scripts/db/backup.sh",
    "db:backup:verify": "node scripts/db/verify-backup.js",
    "db:backup:test-restore": "node scripts/db/test-restore.js",
    "db:restore": "chmod +x ./scripts/db/restore.sh && ./scripts/db/restore.sh",
    "db:verify": "node scripts/db/verify-connection.js",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "vercel:env:pull": "vercel env pull .env.local",
    "vercel:env:push": "vercel env push"
  },
  "dependencies": {
    "@barba/core": "^2.10.3",
    "@prisma/client": "^5.14.0",
    "@upstash/ratelimit": "^1.2.0",
    "@upstash/redis": "^1.31.0",
    "@vercel/analytics": "^1.3.0",
    "@vercel/speed-insights": "^1.0.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.2.0",
    "gsap": "^3.13.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "resend": "^3.2.0",
    "sharp": "^0.33.0",
    "stripe": "^15.8.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.0",
    "@playwright/test": "^1.44.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.22",
    "dotenv-cli": "^7.4.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.0",
    "prisma": "^5.14.0",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.10.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
