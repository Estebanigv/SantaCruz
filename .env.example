# Environment Variables Template - Viña Santa Cruz
# Copy this file to .env.local for local development

# =====================================================
# DATABASE
# =====================================================
DATABASE_URL="postgresql://user:password@host:5432/dbname?schema=public&connection_limit=5"
DATABASE_URL_UNPOOLED="postgresql://user:password@host:5432/dbname?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/dbname?schema=public"

# =====================================================
# NEXT.JS
# =====================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# =====================================================
# CLOUDINARY (Image Storage & CDN)
# =====================================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="vina-santa-cruz"

# =====================================================
# CLOUDFLARE (CDN & Security)
# =====================================================
CLOUDFLARE_ZONE_ID="your-zone-id"
CLOUDFLARE_API_TOKEN="your-api-token"

# =====================================================
# PAYMENT GATEWAYS
# =====================================================

# Transbank (Chile)
TRANSBANK_COMMERCE_CODE="your-commerce-code"
TRANSBANK_API_KEY="your-api-key"
TRANSBANK_ENVIRONMENT="integration" # or "production"
NEXT_PUBLIC_TRANSBANK_ENABLED="true"

# Flow (Chile)
FLOW_API_KEY="your-api-key"
FLOW_SECRET_KEY="your-secret-key"
FLOW_ENVIRONMENT="sandbox" # or "production"
NEXT_PUBLIC_FLOW_ENABLED="false"

# Stripe (International)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_ENABLED="false"

# =====================================================
# EMAIL SERVICE (Brevo - formerly Sendinblue)
# =====================================================
BREVO_API_KEY="your-api-key"
BREVO_SENDER_EMAIL="noreply@vinasantacruz.cl"
BREVO_SENDER_NAME="Viña Santa Cruz"

# =====================================================
# SMS SERVICE (Twilio)
# =====================================================
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+56912345678"

# =====================================================
# ANALYTICS & MONITORING
# =====================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_AUTH_TOKEN="your-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="vina-santa-cruz"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# =====================================================
# RATE LIMITING & SECURITY
# =====================================================
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# =====================================================
# FEATURE FLAGS
# =====================================================
NEXT_PUBLIC_ENABLE_CHAT="false"
NEXT_PUBLIC_ENABLE_WISHLIST="true"
NEXT_PUBLIC_ENABLE_LOYALTY_PROGRAM="false"
NEXT_PUBLIC_AGE_VERIFICATION="true"

# =====================================================
# ADMIN & CMS
# =====================================================
ADMIN_EMAIL="admin@vinasantacruz.cl"
ADMIN_PASSWORD_HASH="generate-with-bcrypt"

# =====================================================
# BACKUP & STORAGE
# =====================================================
BACKUP_STORAGE_URL="s3://backup-bucket"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"

# =====================================================
# CI/CD & VERCEL
# =====================================================
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-org-id"
VERCEL_PROJECT_ID="your-project-id"

# =====================================================
# DEVELOPMENT ONLY
# =====================================================
SKIP_ENV_VALIDATION="false"
NEXT_TELEMETRY_DISABLED="1"
LOG_LEVEL="debug" # error, warn, info, debug
